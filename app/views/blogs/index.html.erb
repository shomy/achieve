<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
      <%= link_to "ブログ作成", new_blog_path, class: 'btn btn-default' %>
    <div class="row">
    <% @blogs.each do |blog| %>
      <h4><strong><%= blog.title %></strong></h4>
      <p><%= blog.content %></p>
      <p><img src="<%= blog.user.image_url %>" alt="">  <%= blog.user.name %></p>
      <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    <% end %>
    </div>
  </div>
</div>
<div id="page-top-btn1" class="page-top-btn1">
    <p><a class="move-page-top1" id="move-page-top1">▲</a></p>
</div>