<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<h2>以下の内容で送信する</h2>
<%= form_for(@que) do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :content %>

<p>名前：<%= @que.name %></p>
<p>メール：<%= @que.email %></p>
<p>内容：<%= @que.content %></p>
<%=f.submit"登録する" ,class:"btn btn-primary"%>
<% end %>



<%= form_for(@que, url: new_que_path, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる",name:'back' ,class:"btn btn-danger"%>
<% end %>

  </div>
</div>


